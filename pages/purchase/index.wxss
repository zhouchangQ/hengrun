.top-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 140px;
  z-index: 0;
}

/* 遮挡样式 */
.cover-box .cover{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, .6);
  /* 设置高斯模糊 */
	/* filter: blur(10px); */
}
.cover-box .tip{
  position: absolute;
  left: 50%;
  top: 140rpx;
  z-index: 1;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  width: 400rpx;
  margin-left: -200rpx;
  text-align: center;
}
