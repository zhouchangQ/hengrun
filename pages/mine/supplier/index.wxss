
.van-sticky{
  position: fixed !important;
  z-index: 2;
  width: 100%;
}
.van-tab--active{
  color: #40CE64 !important
}
.item {
  padding: 30rpx;
}
.item:first-child{
  margin-top: 120rpx
}
.item .item-title {
  font-size: 32rpx;
  color: #303133;
  font-weight: bold;
}

.item .item-content {
  font-size: 30rpx;
  line-height: 50rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f1f1f1;
}
.item .item-content .in{
  display: flex;
}
.item-content image {
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
  margin-top: 10rpx
}

.item-foot {
  margin-top: 24rpx;
  font-size: 30rpx;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-foot .foot-item{
  display: flex;
  justify-content: space-between;
  line-height: 70rpx;
}
.item-foot .foot-item text:last-child{
  font-weight: bold
}