.form-item2{
  height: auto;
  line-height: 40rpx;
}
.img-box {
  position: relative;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 40rpx;
}

.img-box-item {
  position: relative;
  margin-top: 4vw;
  width: 18vw;
  height: 18vw;
  border-radius: 20rpx;
  margin-left: 10rpx;
  background-color: #fff;
  text-align: center;
}


.img-add {
  width: 8vw;
  height: 8vw;
  margin-left: 0vw;
  margin-top: 9vw;
}

.delete-img {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  top: 8rpx;
  right: 8rpx;
}

.delete-box {
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  height: 0;
  border-right: 46rpx solid rgba(0, 0, 0, 0.4);
  border-bottom: 46rpx solid transparent;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}


/* 选择弹窗样式 */

.choose-box {
  position: absolute;
  overflow: hidden;
  height: 0;
  transition: all 0.3s;
  z-index: 9;
  left: 180rpx;
  top: 80rpx;
  width: 400rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 4rpx 6rpx 20rpx rgba(0, 0, 0, 0.3);
}

.open {
  height: 264rpx;
}

.choose-box .choose-item {
  padding: 15rpx 30rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #efeff4;
}